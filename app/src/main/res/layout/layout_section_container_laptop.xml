<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/section_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/alerts"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:background="@color/background_light"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bills"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/layout_alerts"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/accounts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:background="@color/background_light"
        android:nestedScrollingEnabled="false"
        app:layout_constraintEnd_toStartOf="@+id/bills"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bills"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="@color/background_light"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/alerts"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintStart_toEndOf="@+id/accounts"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/budgets"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:background="@color/background_light"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/alerts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bills">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>