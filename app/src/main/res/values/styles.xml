<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_medium</item>
        <item name="colorPrimaryDark">@color/background_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="CondensedBase" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Subtitle1" parent="CondensedBase">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.035625</item>
    </style>

    <style name="Subtitle2" parent="CondensedBase">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.035</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="Body2" parent="CondensedBase">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.1875</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <style name="Caption" parent="Subtitle2">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button" parent="CondensedBase">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="BodyTight" parent="Body2">
        <item name="android:letterSpacing">0.0625</item>
    </style>

    <style name="EczarBase" parent="AppTheme">
        <item name="android:fontFamily">@font/eczar</item>
    </style>

    <style name="H3Heading" parent="EczarBase">
        <item name="android:letterSpacing">0.0357</item>
        <item name="android:textSize">44sp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FadedH3Heading" parent="H3Heading">
        <item name="android:alpha">0.2</item>
    </style>

    <style name="Body1" parent="EczarBase">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.16</item>
    </style>
    <!--

    얼렛창 커스텀
        windowBackground : 얼럿창의 백그라운드 색상
        textColor : 얼럿창의 텍스트타이틀과 버튼 이 두가지가 바뀐다.
        textColorPrimary : 텍스트 내용만 바뀜
        windowMinWidthMajor : 주요축
        windowMinWidthMinor : 최소 허용되는 창 크기 (넓이) 보조축 <<이거에 따라 길이가 달라짐 주요축은 해놔도 잘안됨 ..

    -->
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/background_medium</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">70%</item>
    </style>

    <!--<item name="android:background">@color/background_gray</item>-->
    <!--<item name="backgroundTint">#ffffff</item>-->
    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="backgroundTint">#ffffff</item>
        <!--<item name="android:background">@color/background_gray</item>-->
    </style>

    <!--프로그래스 바 투명하게 만들기 위한 -->
    <style name="MyTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>
</resources>
