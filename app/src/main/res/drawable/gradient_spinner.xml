<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/background_medium" /> <!-- 배경 -->
                    <stroke android:width="0.1dp" android:color="#ffffff" /> <!-- 외각선 -->
                </shape>
            </item>
            <!-- 회살표를 넣기위해-->
            <item android:left="1dp">
                <bitmap android:src="@drawable/baseline_keyboard_arrow_down_white_48dp"  android:gravity="center_vertical|right" />
            </item>
        </layer-list>
    </item>
</selector>